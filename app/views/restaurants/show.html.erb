<h1><%= @restaurant.name %></h1>

<h4><%= @restaurant.category %></h4>
<p>Contact</p>
<p><%= @restaurant.address %> | <%= @restaurant.phone_number %></p>
<hr>
<h4>Reviews</h4>
<% @restaurant.reviews.each do |review| %>
  <p><%= "⭐️" * review.rating %></p>
  <p><%= review.content %></p>
  <hr>
<% end %>

<%= link_to "Add a review", new_restaurant_review_path(@restaurant) %>
<%= link_to "Back to restaurants", restaurants_path %>
